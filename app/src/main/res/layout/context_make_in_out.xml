<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_show_message_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/cost_text_size"
        android:textColor="@android:color/black"
        android:text="Вы действительно хотите удалить \nэтот заказ из истории?"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_cancel_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mdtp_material_button_textpadding_horizontal"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Нет"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/bt_ok_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mdtp_material_button_textpadding_horizontal"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Да"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</LinearLayout>