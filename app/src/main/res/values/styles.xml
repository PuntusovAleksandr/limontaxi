<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/AppTheme.Splash.TextStyle</item>
    </style>

    <style name="AppTheme.Splash.TextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">54sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/btns_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.BorderlessButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:paddingLeft">8dp</item>-->
        <!--<item name="android:paddingRight">8dp</item>-->
        <!--<item name="backgroundTint">@color/pressedButtonColor</item>-->
        <!--<item name="android:textColor">@color/button_text_color_selector</item>-->
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textColorPrimary">@color/colorPrimary</item>-->
    </style>

    <style name="AppTheme.Dialog.EditText" parent="AppTheme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/et_text_size</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.PreferencesSection" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.RadioButton" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.CheckButton" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.Tab" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

</resources>
