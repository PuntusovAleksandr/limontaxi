<?xml version="1.0" encoding="utf-8"?>
<manifest package="taxi.lemon"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"
        />

    <application
        android:name="taxi.lemon.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="taxi.lemon.activities.SplashScreenActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.Splash"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="taxi.lemon.activities.LoginActivity"
            android:label="@string/la_title"
            android:theme="@style/AppTheme"
            >
        </activity>
        <activity
            android:name="taxi.lemon.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme"
            >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
            />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"
            />

        <activity
            android:name="taxi.lemon.activities.UpdateProfileActivity"
            android:label="@string/title_activity_update_profile"
            android:theme="@style/AppTheme"
            >
        </activity>
        <activity
            android:name="taxi.lemon.activities.PreferencesActivity"
            android:label="@string/title_activity_preferences"
            android:theme="@style/AppTheme"
            >
        </activity>
        <activity
            android:name="taxi.lemon.activities.MapActivity"
            android:label="@string/title_activity_map"
            android:theme="@style/AppTheme"
            >
        </activity>
        <activity
            android:name="taxi.lemon.activities.RestorePasswordActivity"
            android:label="@string/rpf_title_restore_password"
            android:theme="@style/AppTheme"
            >
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="bbf9a3c96b3028ff317ea62c9019d985557d32dd" />
    </application>

</manifest>
