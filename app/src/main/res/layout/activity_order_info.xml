<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="taxi.lemon.activities.OrderInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:id="@+id/card_from"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:contentPaddingTop="@dimen/card_view_padding"
            card_view:contentPaddingLeft="@dimen/card_view_padding"
            card_view:contentPaddingRight="@dimen/card_view_padding"
            card_view:contentPaddingBottom="@dimen/card_view_padding"
            card_view:cardUseCompatPadding="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/oia_from"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/exec_status_text_size" />

                <TextView
                    android:id="@+id/tv_address_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="START ADDRESS"
                    android:textSize="@dimen/address_text_size" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_to"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:contentPaddingTop="@dimen/card_view_padding"
            card_view:contentPaddingLeft="@dimen/card_view_padding"
            card_view:contentPaddingRight="@dimen/card_view_padding"
            card_view:contentPaddingBottom="@dimen/card_view_padding"
            card_view:cardUseCompatPadding="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/oia_to"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/exec_status_text_size" />

                <TextView
                    android:id="@+id/tv_address_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="START ADDRESS"
                    android:textSize="@dimen/address_text_size" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_order_info"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:contentPaddingTop="@dimen/card_view_padding"
            card_view:contentPaddingLeft="@dimen/card_view_padding"
            card_view:contentPaddingRight="@dimen/card_view_padding"
            card_view:contentPaddingBottom="@dimen/card_view_padding"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_order_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/oia_order_info"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/exec_status_text_size" />

                <TextView
                    android:id="@+id/tv_order_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INFOOOO"
                    android:textSize="@dimen/address_text_size" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/b_call_to_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/oia_call_to_driver"
            android:textColor="@color/mdtp_white"
            android:textAllCaps="true"
            android:layout_gravity="bottom"
            style="@style/AppTheme.Button"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/b_cancel_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/oia_cancel_order"
            android:textColor="@color/mdtp_white"
            android:textAllCaps="true"
            android:layout_gravity="bottom"
            style="@style/AppTheme.Button"
            />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
