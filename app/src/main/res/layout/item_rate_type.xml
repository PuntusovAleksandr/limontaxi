            <!--android:text="@string/pa_truck"-->
            <!--style="@style/AppTheme.RadioButton"-->
            <!--/>-->

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rb_wagon"
            android:text="@string/pa_wagon"
            style="@style/AppTheme.RadioButton"
            />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rb_minibus"
            android:text="@string/pa_minibus"
            style="@style/AppTheme.RadioButton"
            />

        <!--<android.support.v7.widget.AppCompatRadioButton-->
            <!--android:id="@+id/rb_business"-->
